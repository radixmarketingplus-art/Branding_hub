<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ===== STRONG BASE SHADOW (VISIBLE ON WHITE) ===== -->
    <item
        android:left="0dp"
        android:top="5dp"
        android:right="0dp"
        android:bottom="2dp">
        <shape>
            <corners android:radius="18dp"/>
            <solid android:color="#33000000"/>
        </shape>
    </item>

    <!-- ===== MID SOFT SHADOW ===== -->
    <item
        android:left="2dp"
        android:top="3dp"
        android:right="2dp"
        android:bottom="3dp">
        <shape>
            <corners android:radius="18dp"/>
            <solid android:color="#1F000000"/>
        </shape>
    </item>

    <!-- ===== CARD SURFACE ===== -->
    <item>
        <shape>
            <corners android:radius="18dp"/>

            <!-- Real white / dark surface -->
            <solid android:color="?attr/colorSurface"/>

            <!-- Border helps on white background -->
            <stroke
                android:width="1dp"
                android:color="#22000000"/>
        </shape>
    </item>

    <!-- ===== TOP LIGHT (DEPTH EFFECT) ===== -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="7dp">
        <shape>
            <corners android:radius="17dp"/>
            <gradient
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270"/>
        </shape>
    </item>

</layer-list>
