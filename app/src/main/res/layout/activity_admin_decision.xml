<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/screen_bg">

    <LinearLayout
        android:id="@+id/actionRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#0D000000"
            app:cardBackgroundColor="@color/surface_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_dialog_alert"
                    app:tint="?attr/colorPrimary"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="#0D000000"
                    android:padding="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Action Required"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="-0.01" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please choose how you want to proceed with this request"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:layout_marginBottom="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAccept"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Accept"
                    android:fontFamily="sans-serif-black"
                    app:cornerRadius="16dp"
                    app:backgroundTint="?attr/colorPrimary"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReject"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Reject"
                    android:fontFamily="sans-serif-black"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#EF4444"
                    android:textColor="@color/white" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
