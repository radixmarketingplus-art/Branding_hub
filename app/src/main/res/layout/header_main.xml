<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <!-- PROFILE -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btnProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        app:shapeAppearanceOverlay="@style/CircleAppearance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeWidth="1dp"
        app:strokeColor="@color/card_stroke" />

    <!-- GREETING -->
    <LinearLayout
        android:id="@+id/greetingContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/actionContainer"
        app:layout_constraintStart_toEndOf="@id/btnProfile"
        app:layout_constraintTop_toTopOf="parent">

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Welcome Back,"-->
<!--            android:textSize="11sp"-->
<!--            android:textColor="?attr/colorOnSurfaceVariant"-->
<!--            android:fontFamily="sans-serif-medium"-->
<!--            android:textAllCaps="true"-->
<!--            android:letterSpacing="0.08" />-->

        <TextView
            android:id="@+id/txtGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM Plus"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:textColor="?attr/colorOnSurface"
            android:letterSpacing="-0.01" />
    </LinearLayout>

    <!-- ACTION BUTTONS -->
    <LinearLayout
        android:id="@+id/actionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- SEARCH -->
        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_search"
            android:background="@drawable/bg_header_btn"
            app:tint="?attr/colorOnSurface"
            android:layout_marginEnd="6dp" />

        <!-- NOTIFICATION -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/btnNotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@android:drawable/ic_popup_reminder"
                android:background="@drawable/bg_header_btn"
                app:tint="?attr/colorOnSurface" />

            <View
                android:id="@+id/headerBadge"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_badge_red"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

