<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:colorBackground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ================= USER INFO ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txtUserName"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtEmail"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtMobile"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- ================= AD DETAILS ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="16dp">

            <!-- Advertisement Link -->
            <TextView
                android:id="@+id/txtTitle"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Info -->
            <TextView
                android:id="@+id/txtDesc"
                android:textSize="14sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Time -->
            <TextView
                android:id="@+id/txtTime"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Status -->
            <TextView
                android:id="@+id/txtStatus"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- ================= TEMPLATE IMAGE ================= -->
        <TextView
            android:text="Advertisement Template"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgTemplate"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <!-- ================= PAYMENT PROOF ================= -->
        <TextView
            android:text="Payment Proof"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgProof"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <!-- ================= APPROVAL EXPIRY ================= -->
        <LinearLayout
            android:id="@+id/expiryPickerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approval Duration (Default 7 Days)"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <Spinner
                android:id="@+id/spinnerDuration"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_spinner"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </LinearLayout>

        <!-- ================= ADMIN ACTIONS ================= -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnApprove"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Approve"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_primary_button"
                android:visibility="gone"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reject"
                android:textAllCaps="false"
                android:textColor="#FF6B6B"
                android:textStyle="bold"
                android:background="@drawable/bg_danger_button"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
