<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:colorBackground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ================= USER INFO ================= -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/nameTxt"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/emailTxt"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mobileTxt"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <!-- ================= PLAN INFO ================= -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/planTxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dateTxt"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <!-- ================= PAYMENT PROOF ================= -->

        <TextView
            android:text="@string/label_payment_proof"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/proofImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="12dp"/>


        <!-- DOWNLOAD BUTTON -->

        <Button
            android:id="@+id/downloadBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_download_proof"
            android:textAllCaps="false"
            android:background="@drawable/bg_primary_button"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"/>


        <!-- ================= PLAN GRANT ================= -->
        <LinearLayout
            android:id="@+id/planGrantContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_grant_plan"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerPlan"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_spinner"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>
        </LinearLayout>

        <!-- ================= EXPIRY INFO (FOR APPROVED) ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtCurrentExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_expires_on"
                android:textStyle="bold"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnUpdateExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#F44336"
                android:text="@string/btn_update_expiry"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
        </LinearLayout>

        <!-- ================= ADMIN ACTIONS ================= -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/approveBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/btn_approve"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_primary_button"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/rejectBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/btn_reject"
                android:textAllCaps="false"
                android:textColor="#FF6B6B"
                android:textStyle="bold"
                android:background="@drawable/bg_danger_button"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
