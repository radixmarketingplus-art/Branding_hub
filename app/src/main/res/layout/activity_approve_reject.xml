<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:colorBackground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ================= USER INFO ================= -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/nameTxt"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/emailTxt"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/mobileTxt"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <!-- ================= PLAN INFO ================= -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/planTxt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dateTxt"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <!-- ================= PAYMENT PROOF ================= -->

        <TextView
            android:text="Payment Proof"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/proofImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_surface_card"
            android:layout_marginBottom="12dp"/>


        <!-- DOWNLOAD BUTTON -->

        <Button
            android:id="@+id/downloadBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Download Proof"
            android:textAllCaps="false"
            android:background="@drawable/bg_primary_button"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"/>


        <!-- ================= ADMIN ACTIONS ================= -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/approveBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Approve"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_primary_button"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/rejectBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reject"
                android:textAllCaps="false"
                android:textColor="#FF6B6B"
                android:textStyle="bold"
                android:background="@drawable/bg_danger_button"/>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
