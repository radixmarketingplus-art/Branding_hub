<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    app:cardCornerRadius="32dp"
    app:cardElevation="24dp"
    app:cardBackgroundColor="@color/surface_light"
    app:strokeWidth="0dp">

    <RelativeLayout
        android:id="@+id/dialogContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Close Button Top Right -->
        <ImageView
            android:id="@+id/btnCloseDialog"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_close_gray"
            app:tint="?attr/colorOnSurfaceVariant" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCloseDialog"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSuccessIco"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_login_success_premium"
                app:tint="?attr/colorPrimary" />

            <TextView
                android:id="@+id/txtSuccessTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/login_congrats"
                android:textColor="?attr/colorOnSurface"
                android:textSize="26sp"
                android:letterSpacing="-0.01" />

            <TextView
                android:id="@+id/txtSuccessDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/login_welcome_msg"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:alpha="0.8" />

            <!-- Spacer at the bottom instead of button for "auto-hide" feel -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
