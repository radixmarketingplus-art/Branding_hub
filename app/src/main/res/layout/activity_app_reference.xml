<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ===== HEADER ===== -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="28dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="App Icon"/>

            <TextView
                android:text="RM Plus"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/versionTxt"
                android:text="Version 1.0"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <!-- ===== DESCRIPTION ===== -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RM Plus helps you grow your business digitally using powerful marketing templates and tools."
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:paddingHorizontal="28dp"
            android:paddingBottom="24dp"/>


        <!-- ===== PRIVACY POLICY ===== -->

        <LinearLayout
            android:id="@+id/privacyBtn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_lock_lock"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginStart="20dp"/>
        </LinearLayout>


        <!-- ===== TERMS ===== -->

        <LinearLayout
            android:id="@+id/termsBtn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms And Conditions"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginStart="20dp"/>
        </LinearLayout>


        <!-- ===== RATE APP ===== -->

        <LinearLayout
            android:id="@+id/rateBtn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/btn_star_big_on"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate App"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginStart="20dp"/>
        </LinearLayout>


        <!-- ===== CONTACT SUPPORT ===== -->

        <LinearLayout
            android:id="@+id/supportBtn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Support"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginStart="20dp"/>
        </LinearLayout>


        <!-- ===== FOOTER ===== -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by Redix Marketing Plus"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
