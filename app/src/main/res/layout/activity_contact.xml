<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="4dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_support_center"
                android:textSize="24sp"
                android:fontFamily="sans-serif-black"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginStart="8dp"
                android:letterSpacing="-0.01" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#0D000000"
            app:cardBackgroundColor="@color/surface_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_help"
                    app:tint="?attr/colorPrimary"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="#0D000000"
                    android:padding="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_support_center"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:letterSpacing="-0.01" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc_support_center"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:layout_marginBottom="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContact"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_contact_admin"
                    android:fontFamily="sans-serif-black"
                    app:cornerRadius="16dp"
                    app:backgroundTint="?attr/colorPrimary"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAdRequest"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_request_adv"
                    android:fontFamily="sans-serif-black"
                    app:cornerRadius="16dp"
                    app:backgroundTint="?attr/colorPrimary"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMy"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/btn_my_requests"
                    android:fontFamily="sans-serif-black"
                    app:cornerRadius="16dp"
                    style="@style/Widget.Material3.Button.TonalButton" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/bottom_nav_layout" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
