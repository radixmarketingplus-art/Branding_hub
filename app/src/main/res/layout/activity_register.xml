<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Top Illustration -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:src="@drawable/register"
                android:scaleType="fitCenter"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <!-- Title -->
            <LinearLayout
                android:id="@+id/regTitleSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/appLogo">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_create_account"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="?attr/colorOnSurface"
                    android:letterSpacing="-0.02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desc_signup_started"
                    android:textSize="15sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- SignUp Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/signupCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_light"
                app:strokeWidth="1dp"
                app:strokeColor="#0D000000"
                app:layout_constraintTop_toBottomOf="@id/regTitleSection">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Full Name -->
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="@string/hint_full_name"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/bg_input_2"
                        android:layout_marginBottom="16dp"
                        android:textSize="16sp" />

                    <!-- Mobile -->
                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="@string/hint_mobile_number"
                        android:inputType="phone"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/bg_input_2"
                        android:layout_marginBottom="16dp"
                        android:textSize="16sp" />

                    <!-- Email -->
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/bg_input_2"
                        android:layout_marginBottom="16dp"
                        android:textSize="16sp" />

                    <!-- Password -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input_2"
                        android:layout_marginBottom="32dp">

                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/hint_password"
                            android:inputType="textPassword"
                            android:textColor="?attr/colorOnSurface"
                            android:textColorHint="?attr/colorOnSurfaceVariant"
                            android:background="@android:color/transparent"
                            android:paddingHorizontal="20dp"
                            android:paddingEnd="50dp"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/eyeBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="end|center_vertical"
                            android:padding="14dp"
                            android:src="@android:drawable/ic_menu_view"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </FrameLayout>

                    <!-- Register Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/registerBtn"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/btn_register"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@android:color/white"
                        app:cornerRadius="16dp"
                        app:backgroundTint="?attr/colorPrimary"
                        android:letterSpacing="0.01" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Spacer for better scrolling -->
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/signupCard" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

