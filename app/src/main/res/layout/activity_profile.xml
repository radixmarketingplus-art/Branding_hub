<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <!-- PROFILE HEADER CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface_light"
            app:strokeWidth="1dp"
            app:strokeColor="#0D000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleAppearance"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="2dp"
                    android:padding="4dp"
                    android:background="#0D000000" />

                <TextView
                    android:id="@+id/nameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="20dp"
                    android:letterSpacing="-0.01" />

                <TextView
                    android:id="@+id/emailTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/mobileTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ACCOUNT SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_account"
            android:paddingHorizontal="24dp"
            android:paddingBottom="12dp"
            style="@style/SettingsHeader" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#0D000000"
            app:cardBackgroundColor="@color/surface_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:id="@+id/editBtn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_menu_edit"
                        style="@style/SettingsIconStyle"
                        app:tint="?attr/colorPrimary" />
                    <TextView
                        android:text="@string/btn_edit_profile"
                        style="@style/SettingsTextStyle"
                        android:fontFamily="sans-serif-bold" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginHorizontal="16dp" android:background="#0D000000" />

                <LinearLayout
                    android:id="@+id/subscriptionBtn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_menu_myplaces"
                        style="@style/SettingsIconStyle"
                        app:tint="?attr/colorPrimary" />
                    <TextView
                        android:text="@string/menu_subscription"
                        style="@style/SettingsTextStyle"
                        android:fontFamily="sans-serif-bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- PREFERENCES SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_preferences"
            android:paddingHorizontal="24dp"
            android:paddingBottom="12dp"
            style="@style/SettingsHeader" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#0D000000"
            app:cardBackgroundColor="@color/surface_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:id="@+id/languageBtn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_menu_manage"
                        style="@style/SettingsIconStyle"
                        app:tint="?attr/colorPrimary" />
                    <TextView
                        android:text="@string/menu_language"
                        style="@style/SettingsTextStyle"
                        android:fontFamily="sans-serif-bold" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginHorizontal="16dp" android:background="#0D000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_menu_day"
                        style="@style/SettingsIconStyle"
                        app:tint="?attr/colorPrimary" />
                    <TextView
                        android:text="@string/menu_mode"
                        style="@style/SettingsTextStyle"
                        android:fontFamily="sans-serif-bold"
                        android:layout_weight="1" />
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/darkSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- APP & SUPPORT -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_app"
            android:paddingHorizontal="24dp"
            android:paddingBottom="12dp"
            style="@style/SettingsHeader" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#0D000000"
            app:cardBackgroundColor="@color/surface_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:id="@+id/settingsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_menu_preferences"
                        style="@style/SettingsIconStyle"
                        app:tint="?attr/colorPrimary" />
                    <TextView
                        android:text="@string/menu_settings"
                        style="@style/SettingsTextStyle"
                        android:fontFamily="sans-serif-bold" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginHorizontal="16dp" android:background="#0D000000" />

                <LinearLayout
                    android:id="@+id/rateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        android:src="@android:drawable/btn_star_big_on"
                        style="@style/SettingsIconStyle"
                        app:tint="?attr/colorPrimary" />
                    <TextView
                        android:text="@string/menu_rate"
                        style="@style/SettingsTextStyle"
                        android:fontFamily="sans-serif-bold" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginHorizontal="16dp" android:background="#0D000000" />

                <LinearLayout
                    android:id="@+id/supportBtn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_dialog_email"
                        style="@style/SettingsIconStyle"
                        app:tint="?attr/colorPrimary" />
                    <TextView
                        android:text="@string/menu_support"
                        style="@style/SettingsTextStyle"
                        android:fontFamily="sans-serif-bold" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginHorizontal="16dp" android:background="#0D000000" />

                <LinearLayout
                    android:id="@+id/shareBtn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_menu_share"
                        style="@style/SettingsIconStyle"
                        app:tint="?attr/colorPrimary" />
                    <TextView
                        android:text="@string/menu_share"
                        style="@style/SettingsTextStyle"
                        android:fontFamily="sans-serif-bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- DANGER ZONE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_account_mgmt"
            android:paddingHorizontal="24dp"
            android:paddingBottom="12dp"
            style="@style/SettingsHeader"
            android:textColor="#EF4444" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="40dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#0D000000"
            app:cardBackgroundColor="@color/surface_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:id="@+id/logoutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_lock_power_off"
                        style="@style/SettingsIconStyle"
                        app:tint="#64748B" />
                    <TextView
                        android:text="@string/menu_logout"
                        style="@style/SettingsTextStyle"
                        android:fontFamily="sans-serif-bold"
                        android:textColor="#64748B" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginHorizontal="16dp" android:background="#0D000000" />

                <LinearLayout
                    android:id="@+id/deleteBtn"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_menu_delete"
                        style="@style/SettingsIconStyle"
                        app:tint="#EF4444" />
                    <TextView
                        android:text="@string/menu_delete_account"
                        style="@style/SettingsTextStyle"
                        android:textColor="#EF4444"
                        android:fontFamily="sans-serif-bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
