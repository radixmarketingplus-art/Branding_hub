<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:fitsSystemWindows="true">

    <!-- ================= SCROLL CONTENT ================= -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="80dp"> <!-- IMPORTANT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <!-- ================= HEADER ================= -->
        <TextView
            android:id="@+id/adminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Panel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"/>

        <TextView
            android:id="@+id/adminSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage application content and users"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="28dp"/>

        <!-- ================= UPLOAD TEMPLATES ================= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Templates"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add images to home page sections"
                    android:textSize="13sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadTemplatesBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="end"
                    android:text="Open"
                    android:textAllCaps="false"
                    app:cornerRadius="22dp"
                    app:backgroundTint="#4A6CF7"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ================= SUBSCRIPTION REQUESTS ================= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subscription Requests"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approve or reject subscription plans"
                    android:textSize="13sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/subscriptionRequestsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="end"
                    android:text="View"
                    android:textAllCaps="false"
                    app:cornerRadius="22dp"
                    style="@style/Widget.Material3.Button.TonalButton"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ================= MANAGE TEMPLATES ================= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advertisment Request"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Advertisment Requests sent by users"
                    android:textSize="13sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/advertisementRequestBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="end"
                    android:text="Check"
                    android:textAllCaps="false"
                    app:cornerRadius="22dp"
                    app:backgroundTint="#4A6CF7"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ================= CONTACT REQUESTS ================= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Requests"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View messages sent by users"
                    android:textSize="13sp"
                    android:textColor="?android:textColorSecondary"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/contactRequestsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="end"
                    android:text="Open"
                    android:textAllCaps="false"
                    app:cornerRadius="22dp"

                    style="@style/Widget.Material3.Button.TonalButton"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>



</androidx.core.widget.NestedScrollView>

    <!-- BOTTOM NAV -->
<include layout="@layout/bottom_nav_layout"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>