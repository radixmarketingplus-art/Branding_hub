<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="100dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="32dp">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="Back" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/adminTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_admin_panel"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="?attr/colorOnSurface"
                        android:letterSpacing="-0.01" />

                    <TextView
                        android:id="@+id/adminSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_admin_panel"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="24dp" />

            <!-- UPLOAD TEMPLATES -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#0D000000"
                app:cardBackgroundColor="@color/surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_upload_templates"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_upload_templates"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/uploadTemplatesBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="end"
                        android:text="@string/btn_open"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-bold"
                        app:cornerRadius="12dp"
                        app:backgroundTint="?attr/colorPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SUBSCRIPTION REQUESTS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#0D000000"
                app:cardBackgroundColor="@color/surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_subscription_requests"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_subscription_requests"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/subscriptionRequestsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="end"
                        android:text="@string/btn_view"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-bold"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- MANAGE TEMPLATES / ADV REQUESTS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#0D000000"
                app:cardBackgroundColor="@color/surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_adv_requests"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_adv_requests"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/advertisementRequestBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="end"
                        android:text="@string/btn_check"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-bold"
                        app:cornerRadius="12dp"
                        app:backgroundTint="?attr/colorPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CONTACT REQUESTS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#0D000000"
                app:cardBackgroundColor="@color/surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_contact_requests"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_contact_requests"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/contactRequestsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="end"
                        android:text="@string/btn_open"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-bold"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.TonalButton" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- USER INFORMATION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#0D000000"
                app:cardBackgroundColor="@color/surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_user_info"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_user_info"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/userInfoBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="end"
                        android:text="@string/btn_view"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-bold"
                        app:cornerRadius="12dp"
                        app:backgroundTint="?attr/colorPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTTOM NAV -->
    <include layout="@layout/bottom_nav_layout" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
