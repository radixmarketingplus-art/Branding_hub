<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <!-- ================= HEADER ================= -->
        <TextView
            android:text="@string/title_edit_profile"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/desc_update_info"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile"
                    app:shapeAppearanceOverlay="@style/CircleAppearance"
                    app:strokeColor="#DDDDDD"
                    app:strokeWidth="1dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnUploadImg"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:src="@android:drawable/ic_menu_camera"
                    app:fabCustomSize="32dp"
                    app:maxImageSize="18dp"
                    app:tint="@android:color/white"
                    android:backgroundTint="#4A6CF7"
                    xmlns:app="http://schemas.android.com/apk/res-auto"/>
            </FrameLayout>

            <TextView
                android:id="@+id/btnRemoveImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/link_remove_img"
                android:textColor="#FF5252"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- ================= BASIC INFO CARD ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_surface_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/name"
                android:hint="@string/hint_your_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_2"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:paddingHorizontal="14dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/designation"
                android:hint="@string/hint_designation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_2"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:paddingHorizontal="14dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/dob"
                android:hint="@string/hint_dob"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_2"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:paddingHorizontal="14dp"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:clickable="true"/>
        </LinearLayout>

        <!-- ================= GENDER CARD ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_surface_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="@string/label_gender"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioGroup
                android:id="@+id/genderGroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/male"
                    android:text="@string/gender_male"
                    android:textColor="?attr/colorOnSurface"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/female"
                    android:text="@string/gender_female"
                    android:textColor="?attr/colorOnSurface"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/other"
                    android:text="@string/gender_other"
                    android:textColor="?attr/colorOnSurface"/>
            </RadioGroup>
        </LinearLayout>

        <!-- ================= CONTACT CARD ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_surface_card"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/email"
                android:hint="@string/hint_email"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_2"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:paddingHorizontal="14dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Spinner
                    android:id="@+id/countryCodePicker"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_country_code"
                    android:paddingStart="12dp"
                    android:paddingEnd="32dp"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/mobile"
                    android:hint="@string/hint_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_2"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:paddingHorizontal="14dp"
                    android:inputType="phone"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/stateSpinner"
                android:layout_width="match_parent"
                android:hint="@string/hint_select_state"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner_state"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="14dp"/>

            <Spinner
                android:id="@+id/citySpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner_state"
                android:paddingHorizontal="14dp"/>
        </LinearLayout>

        <!-- ================= SAVE BUTTON ================= -->
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="@string/btn_save_changes"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#4A6CF7"/>

        <!-- bottom nav safe spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
