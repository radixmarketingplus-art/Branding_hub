<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?android:colorBackground">

    <!-- ROOT -->
    <LinearLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- HEADER -->
        <include
            layout="@layout/header_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>

        <!-- MAIN SCROLL -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/mainScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="80dp">

                <!-- TRENDING -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:text="@string/title_sponsored_ads"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?android:textColorPrimary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/btnAdsSeeAll"
                        android:text="@string/btn_see_all"
                        android:visibility="gone"
                        android:textColor="?android:colorAccent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTrending"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>

                <!-- FESTIVAL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="28dp">

                    <TextView
                        android:id="@+id/txtFestivalTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/title_festival_calendar"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?android:textColorPrimary"/>

                    <TextView
                        android:id="@+id/btnAll"
                        android:text="@string/btn_see_all"
                        android:textStyle="bold"
                        android:textColor="?android:colorAccent"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <!-- FESTIVAL DATES -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFestivalDates"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"/>

                <!-- FESTIVAL CARDS -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFestivalCards"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"/>

                <!-- DYNAMIC SECTIONS CONTAINER -->
                <LinearLayout
                    android:id="@+id/dynamicSectionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!-- BOTTOM NAV -->
    <include layout="@layout/bottom_nav_layout"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
