<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/screen_bg">

    <LinearLayout
        android:id="@+id/rootContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- HEADER -->
        <include
            layout="@layout/header_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <!-- MAIN SCROLL -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/mainScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="120dp">

                <!-- TRENDING / SPONSORED ADS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="24dp">

                    <TextView
                        android:text="@string/title_sponsored_ads"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/text_primary"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/btnAdsSeeAll"
                        android:text="@string/btn_see_all"
                        android:visibility="gone"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="12dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTrending"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingHorizontal="20dp"
                        android:overScrollMode="never" />

                    <LinearLayout
                        android:id="@+id/skTrending"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingHorizontal="24dp"
                        android:visibility="visible">
                        <View android:layout_width="320dp" android:layout_height="match_parent" android:background="@drawable/bg_skeleton" android:layout_marginEnd="16dp"/>
                        <View android:layout_width="320dp" android:layout_height="match_parent" android:background="@drawable/bg_skeleton" />
                    </LinearLayout>
                </FrameLayout>

                <!-- FESTIVAL CALENDAR SECTION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp">

                        <TextView
                            android:id="@+id/txtFestivalTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/title_festival_calendar"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-black"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/btnAll"
                            android:text="@string/btn_see_all"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="14sp"
                            android:textColor="?attr/colorPrimary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                    </LinearLayout>

                    <!-- FESTIVAL DATES (FILTER) -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFestivalDates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="64dp"
                        android:layout_marginTop="16dp"
                        android:clipToPadding="false"
                        android:paddingHorizontal="20dp"
                        android:overScrollMode="never"/>

                    <!-- FESTIVAL CARDS -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginTop="12dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvFestivalCards"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:paddingHorizontal="20dp"
                            android:overScrollMode="never"/>

                        <LinearLayout
                            android:id="@+id/skFestival"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingHorizontal="24dp"
                            android:visibility="visible">
                            <View android:layout_width="140dp" android:layout_height="match_parent" android:background="@drawable/bg_skeleton" android:layout_marginEnd="12dp"/>
                            <View android:layout_width="140dp" android:layout_height="match_parent" android:background="@drawable/bg_skeleton" android:layout_marginEnd="12dp"/>
                            <View android:layout_width="140dp" android:layout_height="match_parent" android:background="@drawable/bg_skeleton" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <!-- DYNAMIC SECTIONS CONTAINER -->
                <LinearLayout
                    android:id="@+id/dynamicSectionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <!-- BOTTOM NAV -->
    <include layout="@layout/bottom_nav_layout"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

