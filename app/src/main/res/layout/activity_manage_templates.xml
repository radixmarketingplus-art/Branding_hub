<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TOP BAR -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:background="?attr/colorSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorOnSurface"
                android:contentDescription="Back"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black"
                android:textColor="?attr/colorOnSurface"
                android:letterSpacing="-0.01" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_save"
                android:fontFamily="sans-serif-bold"
                app:icon="@drawable/ic_save"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <!-- CANVAS AREA -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/canvasContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:id="@+id/canvas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorSurfaceVariant">

                <ImageView
                    android:id="@+id/imgTemplate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter" />

                <FrameLayout
                    android:id="@+id/dynamicFrameContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Overlays will be added here dynamically -->

            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- TOOL CONTROLS -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/bottomBar">

            <!-- TEXT CONTROLS -->
            <LinearLayout
                android:id="@+id/textControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="?attr/colorSurface"
                android:visibility="gone">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnColor"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_color"
                        app:cornerRadius="12dp" />
                    <SeekBar
                        android:id="@+id/seekTextSize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:max="100"/>
                </LinearLayout>

                <!-- LAYER CONTROLS (TEXT) -->
                <LinearLayout
                    android:id="@+id/textLayerControlsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTextSendBack"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_send_to_back"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTextBringFront"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_bring_to_front"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- IMAGE CONTROLS -->
            <LinearLayout
                android:id="@+id/imageControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="?attr/colorSurface"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:text="@string/label_size"
                        android:fontFamily="sans-serif-bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <SeekBar
                        android:id="@+id/seekImageSize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:progress="40"
                        android:max="100"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imageLayerControlsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSendBack"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_send_to_back"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBringFront"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_bring_to_front"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- FRAME CONTROLS -->
            <LinearLayout
                android:id="@+id/frameControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:background="?attr/colorSurface"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">
                    
                    <TextView
                        android:id="@+id/btnTabNormalFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_frame"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:background="@drawable/bg_filter_chip_selected" />
                        
                    <TextView
                        android:id="@+id/btnTabBusinessFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_business_frame"
                        android:layout_marginStart="12dp"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="8dp"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:background="@drawable/bg_filter_chip" />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFrames"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:clipToPadding="false"
                    android:paddingHorizontal="12dp" />
            </LinearLayout>

        </FrameLayout>

        <!-- BOTTOM TOOLBAR -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="12dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnText"
                    style="@style/EditorToolItemStyle">
                    <ImageView
                        android:src="@drawable/ic_edit"
                        style="@style/EditorToolIconStyle" />
                    <TextView
                        android:text="@string/btn_text"
                        style="@style/EditorToolTextStyle" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/btnGallery"
                    style="@style/EditorToolItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_menu_add"
                        style="@style/EditorToolIconStyle" />
                    <TextView
                        android:text="@string/label_image"
                        style="@style/EditorToolTextStyle" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnFrame"
                    style="@style/EditorToolItemStyle">
                    <ImageView
                        android:src="@android:drawable/ic_menu_crop"
                        style="@style/EditorToolIconStyle" />
                    <TextView
                        android:text="@string/label_frame"
                        style="@style/EditorToolTextStyle" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnBgColorTool"
                    style="@style/EditorToolItemStyle">
                    <ImageView
                        android:src="@drawable/ic_edit"
                        app:tint="?attr/colorPrimary"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                    <TextView
                        android:text="@string/label_bg_color"
                        style="@style/EditorToolTextStyle" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

