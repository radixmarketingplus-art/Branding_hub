<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <!-- ================= MAIN CONTAINER ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ================= TOP BAR ================= -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="?attr/colorSurface"
            android:elevation="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"/>

            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_save"
                app:tint="?attr/colorOnSurface"/>
        </LinearLayout>

        <!-- ================= CANVAS (FIXED 1:1 SQUARE) ================= -->
        <FrameLayout
            android:id="@+id/canvas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/colorSurfaceVariant"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintBottom_toTopOf="@id/editorBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imgTemplate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/imgFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpFrames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <!-- Wrapper for items that can be scaled. Delete button is kept separate so it doesn't scale -->
            <FrameLayout
                android:id="@+id/wrapText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/txtEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ph_edit_text"
                    android:textSize="22sp"
                    android:textColor="?attr/colorOnSurface"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="4dp"
                    android:paddingBottom="4dp" />
                <ImageView
                    android:id="@+id/btnDeleteText"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|end"
                    android:padding="6dp"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="?attr/colorError"
                    android:src="@drawable/ic_delete"
                    app:tint="?attr/colorOnError" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/wrapLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <!-- Inner container that actually scales -->
                <FrameLayout 
                    android:id="@+id/scaleLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">
                    <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:minHeight="100dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="@null"/>
                    <!-- Move delete icon inside so it moves with the scale -->
                    <ImageView
                        android:id="@+id/btnDeleteLogo"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="top|end"
                        android:padding="6dp"
                        android:background="@drawable/shape_circle"
                        android:backgroundTint="?attr/colorError"
                        android:src="@drawable/ic_delete"
                        app:tint="?attr/colorOnError" />
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/wrapGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <FrameLayout
                    android:id="@+id/scaleGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">
                    <ImageView
                        android:id="@+id/imgGallery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="120dp"
                        android:minHeight="120dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="@null"/>
                    <ImageView
                        android:id="@+id/btnDeleteGallery"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="top|end"
                        android:padding="6dp"
                        android:background="@drawable/shape_circle"
                        android:backgroundTint="?attr/colorError"
                        android:src="@drawable/ic_delete"
                        app:tint="?attr/colorOnError" />
                </FrameLayout>
            </FrameLayout>
        </FrameLayout>

        <!-- ================= TEXT CONTROLS ================= -->
        <LinearLayout
            android:id="@+id/textControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            android:background="?attr/colorSurface"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/editorBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnColor"
                android:text="@string/btn_color"
                android:textAllCaps="false"
                app:backgroundTint="@null"
                android:background="@drawable/bg_primary_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>

            <SeekBar
                android:id="@+id/seekTextSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:max="100"/>
        </LinearLayout>

        <!-- ================= IMAGE CONTROLS (Logo/Gallery) ================= -->
        <LinearLayout
            android:id="@+id/imageControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            android:background="?attr/colorSurface"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/editorBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <TextView
                android:text="@string/label_size"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/seekImageSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:progress="40"
                android:max="100"/>
        </LinearLayout>

        <!-- ================= FRAME CONTROLS ================= -->
        <LinearLayout
            android:id="@+id/frameControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorSurface"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/editorBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Frame Picker -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFrames"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:padding="8dp"/>

            <!-- Frame Size -->
            <SeekBar
                android:id="@+id/seekFrameSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="300"/>
        </LinearLayout>

        <!-- ================= EDITOR BAR ================= -->
        <LinearLayout
            android:id="@+id/editorBar"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="?attr/colorSurface"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/btnText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    app:tint="?attr/colorOnSurface"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_text"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLogo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_logo"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnGallery"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_gallery"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnFrame"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_add_frame"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>